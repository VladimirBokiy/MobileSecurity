@page "{handler?}"
@model NetworkModel
@{
  ViewData["Title"] = "Network";
  Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - lab1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/lab1.styles.css" asp-append-version="true"/>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <div class="container-fluid">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link active" asp-page="Index">Hardware</a>
          </li>
         <li class="nav-item">
            <a class="nav-link" asp-page="Antivirus">Antivirus</a>
          </li>
            <li class="nav-item">
                <a class="nav-link" asp-page="Updates">Updates</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-page="Network">Network</a>
            </li>
            <a class="nav-link" asp-page="Network" asp-page-handler="Json">Get JSON</a>
        </ul>
      </div>
    </nav>
    
<div class="text-center">
    <div class="d-flex flex-wrap justify-content-around">
        @foreach (var a in Model.NetworkAdaptersInfo.Adapters)
            {
                <div class="d-flex flex-wrap justify-content-between m-3">
                    <ul class="list-group" >
                        <li class="list-group-item d-inline-flex justify-content-center m-1">
                            <p class="fw-bold m-1">Index: </p>
                            <p class="m-1">@a.Index</p>
                        </li>
                        <li class="list-group-item d-inline-flex justify-content-center m-1">
                            <p class="fw-bold m-1">Description: </p>
                            <p class="m-1">@a.Description</p>
                        </li>
                        <li class="list-group-item d-inline-flex justify-content-center m-1">
                            <p class="fw-bold m-1">SettingID: </p>
                            <p class="m-1">@a.SettingID</p>
                        </li>
                        <li class="list-group-item d-inline-flex justify-content-center m-1">
                            <p class="fw-bold m-1">MAC Address: </p>
                            <p class="m-1">@a.MACAddress</p>
                        </li>
                    </ul>
                </div>
            }
    </div>
</div>
</body>
</html>
