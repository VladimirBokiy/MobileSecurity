@page "{handler?}"
@model IndexModel
@{
  ViewData["Title"] = "Hardware";
  Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - lab1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/lab1.styles.css" asp-append-version="true"/>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <div class="container-fluid">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link active" asp-page="Index">Hardware</a>
          </li>
         <li class="nav-item">
            <a class="nav-link"  asp-page="Antivirus">Antivirus</a>
          </li>
            <li class="nav-item">
                <a class="nav-link" asp-page="Updates">Updates</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-page="Network">Network</a>
            </li>
            <a class="nav-link" asp-page="Index" asp-page-handler="Json">Get JSON</a>
        </ul>
      </div>
    </nav>
    
<div class="text-center">
    <ul class="list-group">
        <li class="list-group-item d-inline-flex justify-content-center m-1">
            <p class="fw-bold m-1">CPU name: </p>
            <p class="m-1">@Model.HardwareInfo.CpuName</p>
        </li>
        <li class="list-group-item d-inline-flex justify-content-center m-1">
            <p class="fw-bold m-1">Number of cores: </p>
            <p class="m-1">@Model.HardwareInfo.NumberOfCores</p>
        </li>
        <li class="list-group-item d-inline-flex justify-content-center m-1">
            <p class="fw-bold m-1">Number of enabled cores: </p>
            <p class="m-1">@Model.HardwareInfo.NumberOfEnabledCores</p>
        </li>
        <li class="list-group-item d-inline-flex justify-content-center m-1">
            <p class="fw-bold m-1">CPU usage: </p>
            <p class="m-1">@Model.HardwareInfo.CpuUsage</p>
        </li>
    </ul>
    <div class="d-flex justify-content-around">
        @foreach (var d in Model.HardwareInfo.Drives)
            {
                <div class="d-inline-flex justify-content-between">
                    <ul class="list-group">
                        <li class="list-group-item d-inline-flex justify-content-center m-1">
                            <p class="fw-bold m-1">Driver name: </p>
                            <p class="m-1">@d.DriveName</p>
                        </li>
                        <li class="list-group-item d-inline-flex justify-content-center m-1">
                            <p class="fw-bold m-1">Drive type: </p>
                            <p class="m-1">@d.DriveType</p>
                        </li>
                        <li class="list-group-item d-inline-flex justify-content-center m-1">
                            <p class="fw-bold m-1">Total free space: </p>
                            <p class="m-1">@d.TotalFreeSpace</p>
                            <p class="fw-bold m-1">MB</p>
                        </li>
                        <li class="list-group-item d-inline-flex justify-content-center m-1">
                            <p class="fw-bold m-1">Total size: </p>
                            <p class="m-1">@d.TotalSize</p>
                            <p class="fw-bold m-1">MB</p>
                        </li>
                    </ul>
                </div>
            }
    </div>
    <div class="d-flex justify-content-around">
            @foreach (var r in Model.HardwareInfo.RamSticks)
                {
                    <div class="d-inline-flex justify-content-between">
                        <ul class="list-group">
                            <li class="list-group-item d-inline-flex justify-content-center m-1">
                                <p class="fw-bold m-1">RAM speed: </p>
                                <p class="m-1">@r.Speed</p>
                            </li>
                            <li class="list-group-item d-inline-flex justify-content-center m-1">
                                <p class="fw-bold m-1">Data width: </p>
                                <p class="m-1">@r.DataWidth</p>
                            </li>
                            <li class="list-group-item d-inline-flex justify-content-center m-1">
                                <p class="fw-bold m-1">Total RAM memory: </p>
                                <p class="m-1">@r.TotalRamMemory</p>
                                <p class="fw-bold m-1">MB</p>
                            </li>
                        </ul>
                    </div>
                }
        </div>
</div>
</body>
</html>
